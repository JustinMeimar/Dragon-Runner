{
  "testDir": "../packages/MemoryLeaks",
  "testedExecutablePaths": {
    "clang": "/usr/bin/clang",
    "clang2": "/usr/bin/clang"
  },
  "toolchains": {
    "LLVM": [
      {
        "stepName": "compile",
        "executablePath": "$EXE",
        "arguments": ["$INPUT", "-o", "$OUTPUT"],
        "output": "prog.o",
        "allowError": true 
      },
      {

	"stepName": "valgrind",
        "executablePath": "/usr/bin/valgrind",
        "arguments": [
	  "--leak-check=full",
	  "--error-exitcode=111",
	  "--log-file=/dev/null",
	  "$INPUT"
	],
        "usesInStr": true,
        "allowError": true
      }
    ] 
  }
}

